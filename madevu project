
// The base class for all types of books
abstract class Book {
  String title;
  String author;
  double price;

  Book(this.title, this.author, this.price);

  // Method to display book details, which can be overridden by derived classes
  void displayDetails();
}

// Class for Fiction books inheriting from the Book class
class FictionBook extends Book {
  String genre;

  FictionBook(String title, String author, double price, this.genre) : super(title, author, price);

  @override
  void displayDetails() {
    print("Title: $title, Author: $author, Price: \$$price, Genre: $genre");
  }
}

// Class for Non-Fiction books inheriting from the Book class
class NonFictionBook extends Book {
  String subject;

  NonFictionBook(String title, String author, double price, this.subject) : super(title, author, price);

  @override
  void displayDetails() {
    print("Title: $title, Author: $author, Price: \$$price, Subject: $subject");
  }
}

void main() {
  FictionBook fictionBook = FictionBook("1984", "George Orwell", 15.99, "Dystopian");
  NonFictionBook nonFictionBook = NonFictionBook("Sapiens", "Yuval Noah Harari", 19.99, "History");

  fictionBook.displayDetails();
  nonFictionBook.displayDetails();
}
